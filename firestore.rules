rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // More permissive rules for development and debugging
    // IMPORTANT: Tighten these rules for production!
    
    // Users can read and write their own profile
    match /profiles/{userId} {
      // Allow authenticated users to read any profile
      allow read: if request.auth != null;
      // Allow users to create and update their own profile
      allow create, update: if request.auth != null && request.auth.uid == userId;
      // Allow users to delete their own profile
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Posts rules - very permissive for debugging
    match /posts/{postId} {
      // Anyone authenticated can read posts
      allow read: if request.auth != null;
      
      // Allow authenticated users to create posts
      allow create: if request.auth != null;
      
      // Allow authenticated users to update/delete posts (for debugging)
      allow update, delete: if request.auth != null;
    }
    
    // Push tokens - users can only manage their own tokens
    match /push_tokens/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Comments - permissive for development
    match /comments/{commentId} {
      allow read, write: if request.auth != null;
    }
    
    // Likes/reactions - permissive for development
    match /likes/{likeId} {
      allow read, write: if request.auth != null;
    }
    
    // Notifications - permissive for development
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null;
    }
    
    // Analytics events - write-only for authenticated users
    match /analytics/{eventId} {
      allow create: if request.auth != null;
    }
    
    // Allow all authenticated users to read/write for debugging
    // REMOVE THIS IN PRODUCTION!
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}