rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isValidImageSize() {
      return request.resource.size < 10 * 1024 * 1024; // 10MB limit
    }
    
    function isValidImageType() {
      return request.resource.contentType.matches('image/.*');
    }
    
    // Profile avatars
    match /avatars/{userId}/{imageId} {
      allow read: if true; // Public read access for avatars
      allow write: if isOwner(userId) && isValidImageSize() && isValidImageType();
      allow delete: if isOwner(userId);
    }
    
    // Post images
    match /images/{userId}/{imageId} {
      allow read: if true; // Public read access for post images
      allow write: if isOwner(userId) && isValidImageSize() && isValidImageType();
      allow delete: if isOwner(userId);
    }
    
    // Legacy post images path (for backward compatibility)
    match /posts/{userId}/{imageId} {
      allow read: if true;
      allow write: if isOwner(userId) && isValidImageSize() && isValidImageType();
      allow delete: if isOwner(userId);
    }
  }
}